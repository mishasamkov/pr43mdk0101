<UserControl x:Class="WpfApp1.View.Elements.TabElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.Elements"
             mc:Ignorable="d" 
             Height="50" Margin="5">
    <Grid>
        <Image Source="{Binding Source}" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <Label Content="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14pt" Margin="50, 0, 0, 0"/>
    </Grid>
</UserControl>
